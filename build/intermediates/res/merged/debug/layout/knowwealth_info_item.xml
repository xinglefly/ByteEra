<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="@dimen/margin">

    <ImageView
        android:id="@+id/img_info"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginLeft="@dimen/margin"
        android:background="@drawable/start_logo"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/img_info"
        android:orientation="vertical">

        <com.zhicai.byteera.widget.MyTextView
            android:id="@+id/tv_info_title"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:text="发动机卡萨理发店克里斯多夫快乐十分333333'D大调'"
            android:textColor="#000000"
            android:textSize="@dimen/font_small4_size"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
`
            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P2P"
                android:textSize="@dimen/font_small2_size"/>

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/tv_revert_count"
                android:text="03-23"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/font_small2_size"/>

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_revert_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/liuyanicon"
                android:drawablePadding="5dp"
                android:gravity="right"
                android:text="118"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/font_small2_size"/>
        </RelativeLayout>
    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.1dp"-->
    <!--android:layout_below="@+id/ll"-->
    <!--android:layout_marginTop="5dp"-->
    <!--android:background="@color/line"/>-->
</RelativeLayout>