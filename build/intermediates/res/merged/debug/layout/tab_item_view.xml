<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="@dimen/frame_28dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:focusable="false"
            android:src="@drawable/zhicai" />

        <com.zhicai.byteera.widget.MyTextView
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/frame_10dp"
            android:background="@drawable/newmessage"
            android:gravity="center"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_small2_size"
            android:visibility="invisible" />
    </RelativeLayout>

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/frame_05dp"
        android:text="实例"
        android:textColor="#c0c9ca"
        android:textSize="@dimen/font_small2_size" />
</merge>