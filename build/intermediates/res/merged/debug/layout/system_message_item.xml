<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_timeStamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <com.zhicai.byteera.widget.MyTextView
            android:layout_width="0dip"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="#cccccc" />

        <com.zhicai.byteera.widget.MyTextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="#c3c5c7"
            android:textSize="@dimen/font_small7_size" />

        <com.zhicai.byteera.widget.MyTextView
            android:layout_width="0dip"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="#cccccc" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#fff"
        android:padding="10dip" >

        <RelativeLayout
            android:id="@+id/rl_show_big_image"
            android:layout_width="match_parent"
            android:layout_height="159dip" >

            <ImageView
                android:id="@+id/iv_message_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banenr_3" />

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_message_title1"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_alignParentBottom="true"
                android:background="#70000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="美财长访华：对亚投行只提合作不提加入"
                android:textColor="#fff" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@id/rl_show_big_image"
            android:layout_marginTop="10dip"
            android:background="#ebebeb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dip"
            android:layout_below="@id/view_line"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_small_message_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/head_liang" />

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_message_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="中国逆向俄罗斯首条高铁投资320亿"
                android:textColor="#333333"
                android:textSize="@dimen/font_small8_size" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>