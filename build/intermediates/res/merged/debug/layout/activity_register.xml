<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhicai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/head_view_bg"
    android:orientation="vertical">

    <com.zhicai.byteera.widget.HeadViewMain
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhicai:leftImg="@drawable/arrow"
        zhicai:titleName="注册" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginTop="@dimen/margin6"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/shouji"
        android:drawablePadding="@dimen/margin_oneside"
        android:hint="手机号"
        android:inputType="phone"
        android:paddingBottom="@dimen/margin_oneside"
        android:paddingTop="@dimen/margin_oneside"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/font_small3_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginTop="@dimen/margin_oneside"
        android:gravity="center">

        <EditText
            android:id="@+id/et_verifynum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/yanzhengma"
            android:drawablePadding="@dimen/margin_oneside"
            android:hint="验证码"
            android:inputType="phone"
            android:paddingBottom="@dimen/margin_oneside"
            android:paddingTop="@dimen/margin_oneside"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/font_small3_size" />

        <com.zhicai.byteera.widget.MyTextView
            android:id="@+id/tv_sendVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/login_selector"
            android:paddingBottom="@dimen/margin_doubleside"
            android:paddingLeft="@dimen/margin_oneside"
            android:paddingRight="@dimen/margin_oneside"
            android:paddingTop="@dimen/margin_doubleside"
            android:text="获取验证码"
            android:textColor="@color/head_view_bg"
            android:textSize="@dimen/font_small2_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:background="@color/white" />


    <EditText
        android:id="@+id/et_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginTop="@dimen/margin_oneside"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/pswlock"
        android:drawablePadding="@dimen/margin_oneside"
        android:hint="6-14位，建议数字，字母的组合"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/margin_oneside"
        android:paddingTop="@dimen/margin_oneside"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/font_small3_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:background="@color/white" />


    <EditText
        android:id="@+id/et_recommend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginTop="@dimen/margin_oneside"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/tuijianma"
        android:drawablePadding="@dimen/margin_oneside"
        android:hint="邀请码(选填)"
        android:inputType="phone"
        android:paddingBottom="@dimen/margin_oneside"
        android:paddingTop="@dimen/margin_oneside"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/font_small3_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:background="@color/white" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_registerrr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_oneside"
        android:layout_marginRight="@dimen/margin_oneside"
        android:layout_marginTop="@dimen/margin3"
        android:background="@drawable/register_selector"
        android:gravity="center"
        android:padding="@dimen/margin_oneside"
        android:text="同意协议并注册"
        android:textColor="#33000000"
        android:textSize="@dimen/font_small6_size" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_proto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_oneside"
        android:text="知财服务协议"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small4_size" />

</LinearLayout>