<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_below="@+id/head_view"
    android:layout_marginTop="@dimen/margin1">

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shouyi_buttonview_unchecked_left"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="比搜益"
        android:textColor="@color/head_view_bg"
        android:textSize="@dimen/font_small4_size" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_income"
        android:background="@drawable/shouyi_buttonview_checked_right"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="抢标提醒"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small4_size" />
</RelativeLayout>