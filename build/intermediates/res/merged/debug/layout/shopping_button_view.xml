<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/head_view"
    android:layout_marginTop="@dimen/margin1">

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_xuni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shoppingbutton_view_background_checked_left"
        android:paddingTop="7dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="7dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small4_size"
        android:text="虚拟道具" />

    <com.zhicai.byteera.widget.MyTextView
        android:textColor="#646464"
        android:id="@+id/tv_shiwu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_xuni"
        android:background="@drawable/shoppingbutton_view_background_unchecked_right"
        android:paddingTop="7dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="7dp"
        android:textSize="@dimen/font_small4_size"
        android:text="实物商品" />
</RelativeLayout>