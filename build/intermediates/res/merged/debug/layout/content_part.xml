<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_part"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="分散投资走众筹、p2p、票据何种比例，分配能均衡风险与收益比 "
        android:textColor="#000000"
        android:textSize="@dimen/font_small3_size"/>

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_part"
        android:layout_marginTop="@dimen/margin_doubleside"
        android:text="点击查看详情 "
        android:textColor="@color/know_text_color"
        android:textSize="@dimen/small_size"/>
</RelativeLayout>