<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhicai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_white"
    android:orientation="vertical">

    <com.zhicai.byteera.widget.HeadViewMain
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhicai:leftImg="@drawable/arrow"
        zhicai:titleName="专题"/>

    <com.zhicai.byteera.widget.MySwipeRefreshLayout
        android:id="@+id/swipe_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhicai.byteera.widget.LoadMoreListView
            android:id="@+id/load_more_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.zhicai.byteera.widget.MySwipeRefreshLayout>
</LinearLayout>