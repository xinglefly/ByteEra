<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_white"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_head"
        android:singleLine="true"
        android:text="好莱坞大片引进项目"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small4_size" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/iv_head">

        <com.zhicai.byteera.widget.MyTextView
            android:id="@+id/tv_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxWidth="150dp"
            android:singleLine="true"
            android:text="年化收益8%"
            android:textColor="@color/gray_text2"
            android:textSize="@dimen/font_small2_size" />


        <com.zhicai.byteera.widget.MyTextView
            android:id="@+id/tv_income_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_income"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="融资金额270万  期限12个月"
            android:textColor="@color/gray_text2"
            android:textSize="@dimen/font_small2_size" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rl"
        android:layout_marginTop="8dp"
        android:background="#e5e5e5" />
</RelativeLayout>