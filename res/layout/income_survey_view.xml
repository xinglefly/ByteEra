<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:gravity="left|center">

        <ImageView
            android:id="@+id/iv_hotsell"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/hot_sell" />

        <TextView
            android:id="@+id/tv_protitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/frame_20dp"
            android:layout_toRightOf="@id/iv_hotsell"
            android:gravity="left|center"
            android:singleLine="true"
            android:text="芒果三期108"
            android:textColor="#000000"
            android:textSize="@dimen/font_small8_size" />

    </RelativeLayout>


    <GridLayout
        android:id="@+id/gl"
        android:layout_width="192dp"
        android:layout_height="163dp"
        android:layout_below="@id/rl_detail"
        android:layout_margin="@dimen/frame_20dp"
        android:columnCount="2">

        <RelativeLayout
            android:layout_width="94.5dp"
            android:layout_height="80dp"
            android:background="@drawable/product_bottom_bg"
            android:gravity="center">

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_income"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frame_05dp"
                android:gravity="center"
                android:text="15%"
                android:textColor="#ff3775"
                android:textSize="@dimen/font_big24_size" />

            <com.zhicai.byteera.widget.MyTextView
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_below="@id/tv_income"
                android:gravity="center"
                android:text="预期年化收益"
                android:textColor="#a1a1a1"
                android:textSize="@dimen/font_small3_size" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="94.5dp"
            android:layout_height="80dp"
            android:gravity="center">

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_income_day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frame_05dp"
                android:gravity="center"
                android:text="2.7元"
                android:textColor="#ff3775"
                android:textSize="@dimen/font_big24_size" />

            <com.zhicai.byteera.widget.MyTextView
                android:layout_width="60dp"
                android:layout_height="33dp"
                android:layout_below="@+id/tv_income_day"
                android:layout_centerInParent="true"
                android:text="万元投资每日收益"
                android:textColor="#a1a1a1"
                android:textSize="@dimen/font_small3_size" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="94.5dp"
            android:layout_height="80dp"
            android:gravity="center">

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_invest_day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frame_05dp"
                android:gravity="center"
                android:text="180天"
                android:textColor="#000000"
                android:textSize="@dimen/font_big_size" />

            <com.zhicai.byteera.widget.MyTextView
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_below="@id/tv_invest_day"
                android:gravity="center"
                android:text="投资周期"
                android:textColor="#a1a1a1"
                android:textSize="@dimen/font_small3_size" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="94.5dp"
            android:layout_height="80dp"
            android:background="@drawable/product_top_bg"
            android:gravity="center">

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_fixedincome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frame_05dp"
                android:gravity="center"
                android:text="500元"
                android:textColor="#000000"
                android:textSize="@dimen/font_big_size" />

            <com.zhicai.byteera.widget.MyTextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_fixedincome"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="一万元投资预期收益"
                android:textColor="#a1a1a1"
                android:textSize="@dimen/font_small3_size" />

        </RelativeLayout>
    </GridLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_detail"
        android:layout_marginRight="@dimen/frame_20dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/gl">

        <com.zhicai.byteera.activity.product.view.CircleProgressBar
            android:id="@+id/circle_progress"
            android:layout_width="95dp"
            android:layout_height="95dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/frame_29dp"
            android:layout_marginTop="@dimen/frame_20dp"
            android:text="已售"
            android:textColor="#c1c1c1" />


        <com.zhicai.byteera.widget.MyTextView
            android:id="@+id/tv_surplus"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@+id/circle_progress"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/frame_05dp"
            android:gravity="center"
            android:text="未售68.00万"
            android:textColor="#a1a1a1"
            android:textSize="@dimen/font_small3_size" />

    </RelativeLayout>


</RelativeLayout>