<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zhicai="http://schemas.android.com/apk/res-auto"
    android:background="@color/head_view_bg"
    android:orientation="vertical">

    <com.zhicai.byteera.widget.HeadViewMain
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhicai:leftImg="@drawable/arrow"
        zhicai:titleName="绑定手机" />


    <EditText
        android:id="@+id/et_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="30dip"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/shouji"
        android:drawablePadding="15dp"
        android:hint="请输入手机号"
        android:inputType="phone"
       android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/font_small4_size" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/white" />

    <RelativeLayout
        android:paddingTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_verifynum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/yanzhengma"
            android:drawablePadding="14dp"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/font_small4_size" />

        <com.zhicai.byteera.widget.MyTextView
            android:id="@+id/tv_sendVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/login_selector"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="获取验证码"
            android:textColor="@color/head_view_bg"
            android:textSize="@dimen/font_small2_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/white" />


    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/pswlock"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:hint="请输入密码"
        android:inputType="phone"
        android:drawablePadding="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/font_small4_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/white" />


    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_next"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/register_selector"
        android:gravity="center"
        android:padding="10dp"
        android:text="绑定手机"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small8_size" />

</LinearLayout>