<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhicai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhicai.byteera.widget.HeadViewMain
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhicai:leftImg="@drawable/arrow"
        zhicai:titleName="小组推荐"/>

    <com.zhicai.byteera.widget.MyScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhicai.byteera.widget.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="投资理财"
                android:textSize="@dimen/font_small6_size"/>

            <com.zhicai.byteera.widget.NoScrollGridView
                android:id="@+id/first_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"/>

            <com.zhicai.byteera.widget.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="生活理财"
                android:textSize="@dimen/font_small6_size"/>

            <com.zhicai.byteera.widget.NoScrollGridView
                android:id="@+id/sec_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"/>

            <com.zhicai.byteera.widget.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="财女生活"
                android:textSize="@dimen/font_small6_size"/>

            <com.zhicai.byteera.widget.NoScrollGridView
                android:id="@+id/third_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"/>
        </LinearLayout>


    </com.zhicai.byteera.widget.MyScrollView>

</LinearLayout>