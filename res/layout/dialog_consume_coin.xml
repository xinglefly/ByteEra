<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:layout_centerInParent="true">


    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_consumecoin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:singleLine="false"
        android:maxLines="11"
        android:ellipsize="end"
        android:layout_margin="20dp"
        android:padding="@dimen/margin"
        android:text="需要答对前面的关卡或者花费200财币解锁本关卡，是否付费开启呢？"
        android:textSize="@dimen/font_medium_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_consumecoin"
        android:layout_marginTop="@dimen/margin_oneside"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#F8C02A"
            android:text="哦不"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="@dimen/font_small8_size" />

        <Button
            android:id="@+id/btn_consume_true"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#38D138"
            android:text="好的"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="@dimen/font_small8_size" />
    </LinearLayout>

</RelativeLayout>