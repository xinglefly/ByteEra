<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#f8f8f8">

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/frame_15dp"
        android:background="@drawable/textview_corner_exchange_cancel"
        android:padding="@dimen/frame_05dp"
        android:text="选择到我同步关注的小组" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/frame_15dp"
        android:layout_toRightOf="@+id/tv_select"
        android:background="@drawable/textview_corner_exchange_cancel"
        android:drawableRight="@drawable/shouyi_delete"
        android:padding="@dimen/frame_05dp"
        android:text="选中的" />

    <ListView
        android:id="@+id/listview"
        android:layout_marginTop="@dimen/frame_05dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_select"
        android:divider="@color/divide_color"
        android:dividerHeight="0.5dp"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:scrollingCache="false" />

</RelativeLayout>