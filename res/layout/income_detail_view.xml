<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="left|center_vertical">

    <TextView
        android:id="@+id/tv_raisemoney"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/frame_15dp"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/raisemoney"
        android:drawablePadding="@dimen/frame_05dp"
        android:singleLine="true"
        android:text="募集金额：100万"
        android:textColor="#555555" />

    <TextView
        android:id="@+id/tv_repayment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_raisemoney"
        android:layout_marginLeft="@dimen/frame_15dp"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/repayment"
        android:drawablePadding="@dimen/frame_05dp"
        android:singleLine="true"
        android:text="还款方式：到期还本付息"
        android:textColor="#555555" />

    <TextView
        android:id="@+id/tv_cost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_repayment"
        android:layout_marginLeft="@dimen/frame_15dp"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/cost"
        android:drawablePadding="@dimen/frame_05dp"
        android:singleLine="true"
        android:text="费用：免费"
        android:textColor="#555555" />

    <TextView
        android:id="@+id/tv_publish_day"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cost"
        android:layout_marginLeft="@dimen/frame_15dp"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/publish_day"
        android:drawablePadding="@dimen/frame_05dp"
        android:singleLine="true"
        android:text="发布时间：2015/07/14"
        android:textColor="#555555" />

    <TextView
        android:id="@+id/tv_end_day"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_publish_day"
        android:layout_marginLeft="@dimen/frame_15dp"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/end_day"
        android:visibility="gone"
        android:drawablePadding="@dimen/frame_05dp"
        android:singleLine="true"
        android:text="结息日期：2015/07/14"
        android:textColor="#555555" />

</RelativeLayout>