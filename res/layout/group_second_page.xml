<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhicai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_group_second"
    android:layout_height="match_parent">


    <com.zhicai.byteera.widget.HeadViewMain
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhicai:leftImg="@drawable/arrow"
        zhicai:rightImg="@drawable/dian"
        zhicai:titleName="小组详情" />

    <com.zhicai.byteera.widget.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_view"
        android:layout_margin="@dimen/frame_15dp"
        android:singleLine="true"
        android:text="小组名称"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small4_size" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/title_view"
        android:layout_margin="@dimen/frame_15dp"
        android:singleLine="true"
        android:text="理财"
        android:textSize="@dimen/font_small4_size" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/tv_name"
        android:background="@color/gray" />

    <com.zhicai.byteera.widget.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_margin="@dimen/frame_15dp"
        android:singleLine="true"
        android:text="小组成员"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small4_size" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view1"
        android:layout_margin="@dimen/frame_15dp"
        android:singleLine="true"
        android:text="212人"
        android:textSize="@dimen/font_small4_size" />


    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/tv_member"
        android:background="@color/gray" />

    <com.zhicai.byteera.widget.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_marginLeft="@dimen/frame_15dp"
        android:layout_marginTop="@dimen/frame_25dp"
        android:singleLine="true"
        android:text="小组签名"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small4_size" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:lines="3"
        android:ellipsize="end"
        android:layout_below="@id/view2"
        android:layout_margin="@dimen/frame_15dp"
        android:text="转眼科技公司成立快两个月了，加上好久也没更新过博客，趁今天周末写点东西，讲讲我毕业6年的故事或者事故吧，6年说短也不短说长也不长，可是人生有几个6年呢？下面我就按时间顺序讲吧"
        android:textSize="@dimen/font_small2_size" />

    <View
        android:id="@+id/view3"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/tv_description"
        android:background="@color/gray" />


</RelativeLayout>
