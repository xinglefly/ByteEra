<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/zhicai" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/iv_head"
        android:text="网利宝"
        android:textColor="#000000"
        android:textSize="@dimen/font_small4_size" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/frame_10dp"
        android:layout_marginRight="@dimen/frame_10dp"
        android:src="@drawable/shouyi_right" />

    <com.zhicai.byteera.widget.MyTextView
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/frame_05dp"
        android:layout_toLeftOf="@+id/iv_right"
        android:text="当前可投"
        android:textColor="#8A8A8A"
        android:textSize="@dimen/font_small2_size" />


    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/iv_right"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/tv_show"
        android:layout_marginBottom="5dp"
        android:textColor="#ff3775"
        android:text="12"
        android:textSize="@dimen/font_small4_size" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_show"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:gravity="left|bottom"
        android:layout_below="@+id/iv_right"
        android:layout_toLeftOf="@+id/iv_right"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ff3775"
        android:text="个"
        android:textSize="@dimen/font_10_size" />


</RelativeLayout>