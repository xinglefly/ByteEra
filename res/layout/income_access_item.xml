<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="47dp"
android:background="@color/white">

<TextView
    android:id="@+id/risk_control"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:text="机构详情"
    android:textColor="#444243"
    android:layout_marginLeft="@dimen/frame_15dp"
    android:textSize="@dimen/font_small6_size" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/frame_20dp"
    android:src="@drawable/product_right" />

<View
    android:layout_width="match_parent"
    android:layout_height="0.2dp"
    android:layout_alignParentBottom="true"
    android:background="#dfdfdf" />
</RelativeLayout>