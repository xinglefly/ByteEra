<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhicai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="255dp"
    android:background="@drawable/userhome_bg">

    <View
        android:id="@+id/top_head"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_head"
        android:layout_marginTop="60dp">

        <com.zhicai.byteera.widget.CircleView
            android:id="@+id/iv_head"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            zhicai:border_outside_color="#55ffffff"
            zhicai:border_thickness="8dp" />

        <ImageView
            android:id="@+id/iv_do_focus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/iv_head"
            android:background="@drawable/yuan"
            android:padding="25dp" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/fans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp">

        <RelativeLayout
            android:id="@+id/rl_fans"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/user_home_buttom_selelctor"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/funs"
                android:drawablePadding="5dp"
                android:text="粉丝"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small6_size" />

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_fan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_fans"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small6_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_focus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/user_home_buttom_selelctor"
            android:gravity="center"
            android:visibility="gone"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/focus"
                android:drawablePadding="5dp"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small6_size" />

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_focus_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_focus"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small6_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_caibi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/user_home_buttom_selelctor"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/gold"
                android:drawablePadding="5dp"
                android:text="财币"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small6_size" />

            <com.zhicai.byteera.widget.MyTextView
                android:id="@+id/tv_coin_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_coin"
                android:text="4900"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small6_size" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
