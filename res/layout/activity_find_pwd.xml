<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhicai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_white"
    android:orientation="vertical">

    <com.zhicai.byteera.widget.HeadViewMain
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhicai:leftImg="@drawable/arrow"
        zhicai:titleName="找回密码" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="48dip"
        android:layout_toRightOf="@+id/phone"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="10dp"
        android:gravity="center|left"
        android:hint="请填写手机号"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:inputType="phone"
        android:singleLine="true"
        android:textColorHint="@color/login_tv"
        android:textSize="@dimen/font_small5_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/head_view_bg" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_verifynum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/verification"
            android:drawablePadding="10dp"
            android:hint="验证码"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColorHint="@color/login_tv"
            android:textSize="@dimen/font_small5_size" />

        <com.zhicai.byteera.widget.MyTextView
            android:id="@+id/get_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/find_pwd_selector"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small3_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/head_view_bg" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_next"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/find_pwd_selector"
        android:gravity="center"
        android:padding="10dp"
        android:text="立即找回"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small8_size" />
</LinearLayout>