<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhicai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_white"
    android:orientation="vertical">

    <com.zhicai.byteera.widget.HeadViewMain
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhicai:leftImg="@drawable/arrow"
        zhicai:titleName="重设密码" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="30dip"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/shouji_lv"
        android:drawablePadding="15dp"
        android:hint="输入新密码"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#44c7ba"
        android:textColorHint="@color/login_tv"
        android:textSize="@dimen/font_small5_size" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#44c7ba" />


    <EditText
        android:id="@+id/et_pwd2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/phone"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/yanzhenma_lv"
        android:drawablePadding="15dp"
        android:hint="再次输入"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
       android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#44c7ba"
        android:textColorHint="@color/login_tv"
        android:textSize="@dimen/font_small5_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#44c7ba" />

    <com.zhicai.byteera.widget.MyTextView
        android:id="@+id/tv_ok"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/find_pwd_selector"
        android:gravity="center"
        android:padding="10dp"
        android:text="立即修改"
        android:textColor="@color/white"
        android:textSize="@dimen/font_small8_size" />
</LinearLayout>