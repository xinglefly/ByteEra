    <style name="coloredRatingBarStyle">
        <item name="indicator">false</item>
        <item name="ratingtype">normal</item>
    </style>

    <style name="coloredRatingBarStyleIndicator">
        <item name="indicator">true</item>
        <item name="ratingtype">normal</item>
    </style>

    <style name="coloredRatingBarStyleSmall">
        <item name="indicator">false</item>
        <item name="ratingtype">small</item>
    </style>

    <style name="coloredRatingBarStyleSmallIndicator">
        <item name="indicator">true</item>
        <item name="ratingtype">small</item>
    </style>


    <style name="income_access_pay_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:background">@drawable/text_shoke_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="income_access_dialog_right">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/text_shoke_shape</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="income_access_dialog_left">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/font_small6_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--城市查询相应的style-->
    <style name="base_listview_style" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarThumbVertical">@drawable/base_list_scrollbar_handle</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:listSelector">@drawable/base_list_selector</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0dip</item>
    </style>

    <style name="base_large_progressbar_style">
        <item name="android:maxWidth">38.0dip</item>
        <item name="android:maxHeight">38.0dip</item>
        <item name="android:indeterminateDrawable">@anim/base_loading_large_anim</item>
        <item name="android:minWidth">38.0dip</item>
        <item name="android:minHeight">38.0dip</item>
    </style>

